# Inherit the build evironment
Import('env')
env.Append(CPPPATH=['#lib/support/include'])
env.Append(LIBS=['boost_filesystem',
                 'boost_system',
                 'causal_support',
                 'dwarf++',
                 'elf++'])

inspect = env.Program('inspect', Glob('*.cpp'))

# Build inspect as part of the 'all' target
env.Alias('all', inspect)

# Intall inspect in <prefix>/bin
env.Install(env['prefix'] + '/bin', inspect)
env.Alias('install', env['prefix'] + '/bin')
