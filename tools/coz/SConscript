import os

# Inherit the build evironment
Import('env')
my_env = env.Clone()

my_env.Append(LIBS=['boost_program_options'])

coz = my_env.Program('coz', Glob('*.cpp'))

# Build coz as part of the 'all' target
my_env.Alias('all', coz)

# Install coz in <prefix>/bin
my_env.Install(env['prefix'] + '/bin', coz)
my_env.Alias('install', env['prefix'] + '/bin')
